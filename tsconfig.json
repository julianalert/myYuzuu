{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "types": ["react", "react-dom"],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["pages/**/*.tsx", "components/**/*.tsx"],
  "exclude": ["node_modules", "demo"]
}
